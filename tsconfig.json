{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./lib",
    "baseUrl": "./src/",
    "lib": ["dom", "es2015.promise", "es5"],
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES5",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*-test.ts"
  ],
  "compileOnSave": true
}
